<% include partials/header %>

<div class="ui main text container">
	 <div class="ui huge header">
		 RESTful Blog App
	</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% for (blog of blogs) { %>
				<div class="item">
					<div class="image">
						<img src="<%= blog.image %>">
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%= blog.id %>"><%= blog.title %></a>
						<div class="meta">
							<span><%= blog.created.toDateString() %></span>
						</div>
						<div class="description">
							<% let i = blog.body.indexOf(" ", 100) %>
							<% i = i == -1 ?100 : i%>
							<p><%- blog.body.substring(0,i) %></p>
						</div>
						<div class="extra">
							<a class="ui inverted violet button" href="/blogs/<%= blog.id %>">See More</a>
						</div>
					</div>
				</div>
				
			<% } %>
		</div>
	</div>
</div>


<% include partials/footer %>